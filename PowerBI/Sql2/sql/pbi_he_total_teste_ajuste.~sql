             Or (f.CodigoEmpresa = 9 And ac2.competacumu < '01-dec-2018'
            And   ac2.competacumu between To_Date('26/'||To_Char(Add_months(trunc(Sysdate),-1),'mm/yyyy'),'dd/mm/yyyy') And
                                          To_Date('25/'||To_Char(trunc(Sysdate),'mm/yyyy'),'dd/mm/yyyy'))
